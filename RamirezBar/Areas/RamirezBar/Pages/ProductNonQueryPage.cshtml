@page
@using RamirezBar.Areas.RamirezBar.Models
@model RamirezBar.Areas.RamirezBar.Pages.ProductNonQueryPageModel
@{
    Layout = "_LayoutDashboard";

    string NonQueryText = "";
    string NonQueryIcon = "";

    int ProductId;
    int ProviderId;
    string Name;
    int Stock;
    string Photo;
    int Price;
    

    if(HttpContext.Request.QueryString.Value.Contains("?ProductId=0"))
    {
        NonQueryText = "Add";
        NonQueryIcon = "fas fa-plus";

        ProductId = 0;
        ProviderId = 0;
        Name = "";
        Stock = 0;
        Photo = "";
        Price = 0;
        
    }
    else
    {
        NonQueryText = "Edit";
        NonQueryIcon = "fas fa-pen";

        ProductModel ProductModel = new ProductModel().Select1ByProductIdToModel
        (Convert.ToInt32(HttpContext.Request.QueryString.Value.Replace("?ProductId=","")));

        ProductId = ProductModel.ProductId;
        ProviderId = ProductModel.ProviderId;
        Name = ProductModel.Name;
        Stock = ProductModel.Stock;
        Photo = ProductModel.Photo;
        Price = ProductModel.Price;
        
    }

