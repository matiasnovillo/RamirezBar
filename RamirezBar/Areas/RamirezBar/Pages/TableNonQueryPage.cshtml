@page
@using RamirezBar.Areas.RamirezBar.Models
@model RamirezBar.Areas.RamirezBar.Pages.TableNonQueryPageModel
@{
    Layout = "_LayoutDashboard";

    string NonQueryText = "";
    string NonQueryIcon = "";

    int TableId;
    string Name;
    string Photo;
    int UserWaiterId;
    int TableStateId;
    

    if(HttpContext.Request.QueryString.Value.Contains("?TableId=0"))
    {
        NonQueryText = "Add";
        NonQueryIcon = "fas fa-plus";

        TableId = 0;
        Name = "";
        Photo = "";
        UserWaiterId = 0;
        TableStateId = 0;
        
    }
    else
    {
        NonQueryText = "Edit";
        NonQueryIcon = "fas fa-pen";

        TableModel TableModel = new TableModel().Select1ByTableIdToModel
        (Convert.ToInt32(HttpContext.Request.QueryString.Value.Replace("?TableId=","")));

        TableId = TableModel.TableId;
        Name = TableModel.Name;
        Photo = TableModel.Photo;
        UserWaiterId = TableModel.UserWaiterId;
        TableStateId = TableModel.TableStateId;
        
    }

